@{
	ViewData["Title"] = "Home Page";
}

@section scripts
{
<environment names="Development">
	<script src="https://cdn.bootcdn.net/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
	<script src="~/js/JdLogin/Index.js"></script>
</environment>
}

<div class="text-center">
 <div class="card" style="width: 100%">
  <h1 class="display-4">扫码获取Cookie</h1>
  <div class="card-body">
   <div class="container">
	<div class="row">
	 <div class="col-4">
	  <div class="p10" id="qrcode"></div>
	 </div>
	 <div class="col-8">
	  <div class="row">
	   <textarea class="form-control" id="cookie" rows="6"></textarea>
	  </div>
	  <div class="row">
	   <input type="button" class="btn btn-success" value="复制Cookie" onclick="CopyCookie()" />
	  </div>
	 </div>
	</div>
   </div>
  </div>
 </div>
</div>

<div id="copyAlert" aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;">
 <div class="toast" style="position: absolute; top: 0; right: 0;">
  <div class="toast-header">
   <strong class="mr-auto">Bootstrap</strong>
   <small>11 mins ago</small>
   <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
	<span aria-hidden="true">&times;</span>
   </button>
  </div>
  <div class="toast-body">
   Hello, world! This is a toast message.
  </div>
 </div>
</div>
